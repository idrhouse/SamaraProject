@model SamaraProject1.Models.CarouselImage

@{
    ViewData["Title"] = "Eliminar Imagen de Carrusel";
}

<div class="min-h-screen bg-gradient-to-br from-orange-50 to-orange-100 py-6 sm:py-8 md:py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-xl sm:max-w-2xl md:max-w-3xl mx-auto">
        <!-- Botón de volver atrás -->
        <div class="mb-6">
            <a href="javascript:history.back()" class="inline-flex items-center px-4 py-2 border border-orange-400 text-orange-500 bg-transparent rounded-md font-medium text-sm transition-all duration-300 ease-in-out hover:bg-orange-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-300">
                <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Volver
            </a>
        </div>

        <div class="bg-white shadow-2xl rounded-3xl overflow-hidden">
            <div class="px-4 sm:px-6 md:px-8 py-4 sm:py-5 md:py-6 bg-gradient-to-r from-red-500 to-pink-600">
                <h2 class="text-2xl sm:text-3xl font-extrabold text-white text-center sm:text-left">Confirmar Eliminación</h2>
            </div>

            <div class="px-4 sm:px-6 md:px-8 py-6 space-y-4 sm:space-y-6">
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-3 sm:p-4 rounded-r-lg text-sm sm:text-base" role="alert">
                    <p class="font-bold">Advertencia</p>
                    <p>¿Está seguro de que desea eliminar esta imagen del carrusel? Esta acción no se puede deshacer.</p>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg text-sm sm:text-base" role="alert">
                        <strong class="font-bold">Error:</strong>
                        <span class="block sm:inline">@Html.ValidationSummary(false)</span>
                    </div>
                }

                <div class="bg-gray-50 rounded-lg p-4 sm:p-6 shadow-inner">
                    <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-2 sm:mb-4">@Model.Alt</h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Orden</p>
                            <p class="text-base sm:text-lg font-semibold text-gray-800">@Model.Order</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Fecha de creación</p>
                            <p class="text-base sm:text-lg font-semibold text-gray-800">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>

                <div class="mt-4 sm:mt-6">
                    <p class="text-sm font-medium text-gray-500 mb-2">Imagen del Carrusel</p>
                    <img src="@Model.Url" alt="@Model.Alt" class="rounded-lg shadow-md max-w-full h-auto max-h-80 mx-auto">
                </div>

                <form asp-controller="CarouselJson" asp-action="Delete" asp-route-id="@Model.IdCarouselImage" method="post">
                    @Html.AntiForgeryToken()
                    <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3 pt-6">
                        <button type="submit" class="w-full sm:w-auto px-6 py-2 bg-gradient-to-r from-red-500 to-pink-600 text-white font-semibold rounded-lg shadow-md hover:from-red-600 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm">
                            Confirmar Eliminación
                        </button>
                        <a asp-controller="CarouselJson" asp-action="Administrar" class="w-full sm:w-auto px-4 py-2 bg-gray-200 text-gray-700 rounded-lg text-center hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>