@model IEnumerable<SamaraProject1.Models.Categoria>

@{
    ViewData["Title"] = "Categorías - Feria Sámara Market";
}

<div class="min-h-screen bg-gradient-to-br from-orange-50 to-orange-100 py-6 sm:py-8 md:py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col sm:flex-row justify-between items-center mb-6 sm:mb-8 space-y-4 sm:space-y-0">
            <h1 class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-gray-900 text-center sm:text-left">
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-orange-400 to-orange-600">
                    Categorías
                </span>
            </h1>
            <a href="@Url.Action("Create", "Categoria")" class="inline-flex items-center px-4 py-2 border border-orange-400 text-orange-500 bg-transparent rounded-md font-medium text-sm transition-all duration-300 ease-in-out hover:bg-orange-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-300 w-full sm:w-auto justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Nueva Categoría
            </a>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-3 sm:p-4 mb-6 sm:mb-8 rounded-md shadow" role="alert">
                <p class="font-medium text-sm sm:text-base">@TempData["Error"]</p>
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-3 sm:p-4 mb-6 sm:mb-8 rounded-md shadow" role="alert">
                <p class="font-medium text-sm sm:text-base">@TempData["Success"]</p>
            </div>
        }

        <div class="bg-white shadow-xl rounded-2xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Nombre
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors duration-200">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    @item.NombreCategoria
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <a href="@Url.Action("Edit", "Categoria", new { id = item.IdCategoria })" class="text-yellow-600 hover:text-yellow-900 mr-3">Editar</a>

                                    <a href="@Url.Action("Delete", "Categoria", new { id = item.IdCategoria })" class="text-red-600 hover:text-red-900">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>