@model SamaraProject1.Models.RecuperarClaveModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar Contraseña</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 h-screen">
    <!-- Fondo gris que cubre toda la pantalla -->
    <div class="min-h-screen bg-grey-50 flex items-center justify-center">
        <div class="w-full max-w-md px-6 py-8 bg-white shadow-md rounded-lg">
            <a href="/Inicio/IniciarSesion" class="mb-5 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
                <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Volver
            </a>

            <h2 class="text-3xl font-semibold text-center text-blue-600 mb-6">Recuperar Contraseña</h2>

            <!-- Mensaje de éxito -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 text-green-700 p-4 rounded-md mb-4">
                    @TempData["SuccessMessage"]
                </div>
            }

            <!-- Mensaje de error -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-100 text-red-700 p-4 rounded-md mb-4">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form asp-action="RecuperarClave" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

                <div class="mb-4">
                    <label asp-for="Correo" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
                    <input asp-for="Correo" class="mt-2 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Introduce tu correo" />
                    <span asp-validation-for="Correo" class="text-red-500 text-sm"></span>
                </div>

                <div class="mb-6">
                    <input type="submit" value="Enviar enlace de recuperación" class="w-full bg-blue-600 text-white font-semibold py-3 rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
            </form>
        </div>
    </div>

</body>
