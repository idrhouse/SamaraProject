@model SamaraProject1.Models.Administrador

@{
    ViewData["Title"] = "Nuevo Administrador";
}

<div class="min-h-screen bg-gradient-to-br from-orange-50 to-orange-100 py-6 sm:py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md sm:max-w-lg md:max-w-2xl lg:max-w-3xl mx-auto bg-white shadow-2xl rounded-3xl overflow-hidden">
        <div class="px-4 sm:px-6 md:px-8 py-4 sm:py-6 bg-gradient-to-r from-orange-400 to-orange-600">
            <h2 class="text-2xl sm:text-3xl font-extrabold text-white text-center sm:text-left">Crear Nuevo Administrador</h2>
        </div>

        <div class="p-4 sm:p-6 md:p-8">
            <form asp-action="Crear" method="post" class="space-y-4 sm:space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4 mb-4"></div>

                <div class="space-y-2">
                    <label asp-for="NombreAdministrador" class="block text-sm font-medium text-gray-700">Nombre</label>
                    <input asp-for="NombreAdministrador" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 text-sm sm:text-base" required>
                    <span asp-validation-for="NombreAdministrador" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Apellido" class="block text-sm font-medium text-gray-700">Apellido</label>
                    <input asp-for="Apellido" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 text-sm sm:text-base" required>
                    <span asp-validation-for="Apellido" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Correo" class="block text-sm font-medium text-gray-700">Correo</label>
                    <input asp-for="Correo" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 text-sm sm:text-base" required oninput="this.value = this.value.toLowerCase()">
                    <span asp-validation-for="Correo" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Clave" class="block text-sm font-medium text-gray-700">Contraseña</label>
                    <input asp-for="Clave" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 text-sm sm:text-base" required>
                    <span asp-validation-for="Clave" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ConfirmarClave" class="block text-sm font-medium text-gray-700">Confirmar Contraseña</label>
                    <input asp-for="ConfirmarClave" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 text-sm sm:text-base" required>
                    <span asp-validation-for="ConfirmarClave" class="text-xs text-red-500"></span>
                </div>

                <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3 pt-6">
                    <a asp-action="Lista" class="w-full sm:w-auto px-4 py-2 bg-gray-200 text-gray-700 rounded-lg text-center hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm sm:text-base">
                        Cancelar
                    </a>
                    <button type="submit" class="w-full sm:w-auto px-6 py-2 bg-gradient-to-r from-orange-400 to-orange-600 text-white font-semibold rounded-lg shadow-md hover:from-orange-500 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm sm:text-base">
                        Crear Administrador
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}