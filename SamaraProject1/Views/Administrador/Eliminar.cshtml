@model SamaraProject1.Models.Administrador

@{
    ViewData["Title"] = "Eliminar Administrador";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-6 sm:py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md sm:max-w-lg md:max-w-2xl lg:max-w-3xl mx-auto bg-white shadow-2xl rounded-3xl overflow-hidden">
        <div class="px-4 sm:px-6 md:px-8 py-4 sm:py-6 bg-gradient-to-r from-red-500 to-pink-600">
            <h2 class="text-2xl sm:text-3xl font-extrabold text-white text-center sm:text-left">Confirmar Eliminación</h2>
        </div>

        <div class="p-4 sm:p-6 md:p-8 space-y-4 sm:space-y-6">
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-3 sm:p-4 rounded-r-lg text-sm sm:text-base" role="alert">
                <p class="font-bold">Advertencia</p>
                <p>¿Está seguro de que desea eliminar este administrador? Esta acción no se puede deshacer.</p>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 sm:p-6 shadow-inner">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Nombre</p>
                        <p class="text-base sm:text-lg font-semibold text-gray-800">@Model.NombreAdministrador</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Apellido</p>
                        <p class="text-base sm:text-lg font-semibold text-gray-800">@Model.Apellido</p>
                    </div>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500">Correo</p>
                    <p class="text-base text-gray-800 break-all">@Model.Correo</p>
                </div>
            </div>

            <form asp-action="Eliminar" method="post" class="mt-6">
                <input type="hidden" asp-for="IdAdministrador" />
                <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3">
                    <a asp-action="Lista" class="w-full sm:w-auto px-4 py-2 bg-gray-200 text-gray-700 rounded-lg text-center hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition duration-300 ease-in-out">
                        Cancelar
                    </a>
                    <button type="submit" class="w-full sm:w-auto px-6 py-2 bg-gradient-to-r from-red-500 to-pink-600 text-white font-semibold rounded-lg shadow-md hover:from-red-600 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition duration-300 ease-in-out">
                        Confirmar Eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

