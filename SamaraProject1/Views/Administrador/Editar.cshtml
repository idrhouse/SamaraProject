@model SamaraProject1.Models.Administrador;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar Administrador</h2>
        <form asp-controller="Administrador" asp-action="Editar" method="post">
            <input asp-for="IdAdministrador" type="hidden" />

            <div class=" mb-3">
                <label>Nombre Administrador</label>
                <input class="form-control" asp-for=NombreAdministrador type="text" />
            </div>
            <div class=" mb-3">
                <label>Apellido</label>
                <input class="form-control" asp-for=Apellido type="text" />
            </div>
            <div class=" mb-3">
                <label>Correo</label>
                <input class="form-control" asp-for=Correo type="text" />
            </div>
            <div class=" mb-3">
                <label>Clave</label>
                <input class="form-control" asp-for=Clave type="password" />
            </div>
            <div class=" mb-3">
                <button class="btn btn-primary" type="submit">Nuevo</button>
                <a asp-controller="Administrador" asp-action="Lista" class=" btn btn-primary">Volver</a>
            </div>

        </form>


    </div>
