@model List<SamaraProject1.Models.Administrador>

<div class="container">
    <h2>Lista de Administradores</h2>

    <p>
        <a asp-action="Nuevo" class="btn btn-primary">Crear Nuevo Administrador</a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.IdAdministrador</td>
                    <td>@admin.NombreAdministrador</td>
                    <td>@admin.Apellido</td>
                    <td>@admin.Correo</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@admin.IdAdministrador" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@admin.IdAdministrador" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



