@model SamaraProject1.Models.SiteSetting

@{
    ViewData["Title"] = "Editar Configuración";
}

<div class="min-h-screen bg-gradient-to-br from-orange-50 to-orange-100 py-6 sm:py-8 md:py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <!-- Botón de volver atrás -->
        <div class="mb-6">
            <a href="@Url.Action("Index")" class="inline-flex items-center px-4 py-2 border border-orange-500 text-orange-500 bg-transparent rounded-md font-medium text-sm transition-all duration-300 ease-in-out hover:bg-orange-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Volver a la lista
            </a>
        </div>

        <div class="bg-white shadow-xl rounded-2xl overflow-hidden">
            <div class="px-4 sm:px-6 md:px-8 py-4 sm:py-5 md:py-6 bg-gradient-to-r from-orange-500 to-orange-400">
                <h2 class="text-2xl sm:text-3xl font-extrabold text-white text-center sm:text-left">Editar Número SINPE Móvil</h2>
            </div>

            <div class="px-4 sm:px-6 md:px-8 py-6">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
                        <p class="font-bold">Error</p>
                        <div asp-validation-summary="All" class="text-red-600"></div>
                    </div>
                }

                <form asp-action="Edit" method="post">
                    <div class="space-y-6">
                        <!-- Campo oculto para el ID -->
                        <input type="hidden" name="id" value="@Model.SettingKey" />

                        <div>
                            <label for="SettingValue" class="block text-sm font-medium text-gray-700">Número SINPE Móvil</label>
                            <div class="mt-1">
                                <input type="text" name="SettingValue" id="SettingValue" value="@Model.SettingValue"
                                       class="shadow-sm focus:ring-orange-500 focus:border-orange-500 block w-full sm:text-sm border-gray-300 rounded-md"
                                       required />
                            </div>
                            <p class="mt-2 text-sm text-gray-500">
                                Este número se mostrará en la página de donaciones para recibir pagos por SINPE Móvil.
                            </p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Descripción</label>
                            <div class="mt-1 p-3 bg-gray-100 rounded-md">
                                <span class="text-gray-800">@Model.Description</span>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Última Actualización</label>
                            <div class="mt-1 p-3 bg-gray-100 rounded-md">
                                <span class="text-gray-800">@Model.LastUpdated.ToString("dd/MM/yyyy HH:mm")</span>
                                <span class="text-gray-500 text-sm ml-2">por @Model.UpdatedBy</span>
                            </div>
                        </div>

                        <div class="pt-5">
                            <div class="flex justify-end">
                                <a href="@Url.Action("Index")" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                                    Cancelar
                                </a>
                                <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                                    Guardar
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>