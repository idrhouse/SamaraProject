@model SamaraProject1.Models.Producto;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Crear Nuevo Producto</h2>
        <form asp-controller="Producto" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Nombre del Producto</label>
                <input class="form-control" asp-for="Nombre_Producto" type="text" />
                <span asp-validation-for="Nombre_Producto" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Descripción</label>
                <textarea class="form-control" asp-for="Descripcion" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Emprendedor</label>
                <select class="form-control" asp-for="IdEmprendedor" asp-items="@(new SelectList(ViewBag.Emprendedores, "IdEmprendedor", "NombreEmprendedor"))">
                    <option value="">-- Seleccione un Emprendedor --</option>
                </select>
                <span asp-validation-for="IdEmprendedor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Crear</button>
                <a asp-controller="Producto" asp-action="Lista" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
