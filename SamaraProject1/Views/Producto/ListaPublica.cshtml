@model IEnumerable<SamaraProject1.Models.Producto>

@{
    ViewData["Title"] = "Productos - Feria Sámara Market";
}

<div class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-6">
            <a href="javascript:history.back()" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Volver
            </a>
        </div>
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Nuestros Productos
            </h2>
            <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
                Descubre nuestra selección de productos locales únicos
            </p>
        </div>

        <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            @foreach (var item in Model)
            {
                <div class="group relative bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                    {
                        <div class="w-full aspect-w-4 aspect-h-3">
                            <img src="@item.ImagenUrl" alt="@item.Nombre_Producto" class="w-full h-full object-cover">
                        </div>
                    }
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-gray-900">
                            @item.Nombre_Producto
                        </h3>
                        <p class="mt-2 text-sm text-gray-500">
                            @item.Descripcion
                        </p>
                        @if (item.Emprendedor != null)
                        {
                            <div class="mt-4">
                                <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                    @item.Emprendedor.NombreNegocio
                                </span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>  