
@model List<SamaraProject1.Models.Producto>;

<div class="row">
    <div class="col-sm-12">
        <h2>Lista de Productos</h2>
        <div class="mb-3">
            <a asp-controller="Producto" asp-action="Nuevo" class="btn btn-primary">Crear Nuevo Producto</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre del Producto</th>
                    <th>Descripción</th>
                    <th>Emprendedor</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.IdProducto</td>
                        <td>@producto.Nombre_Producto</td>
                        <td>@producto.Descripcion</td>
                        <td>@producto.Emprendedor?.NombreEmprendedor</td>
                        <td>
                            <a asp-controller="Producto" asp-action="Editar" asp-route-id="@producto.IdProducto" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-controller="Producto" asp-action="Eliminar" asp-route-id="@producto.IdProducto" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>