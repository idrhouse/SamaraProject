@model SamaraProject1.Models.TipoProducto

@{
    ViewData["Title"] = "Editar Tipo de Producto";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4">
            <h2 class="text-2xl font-bold mb-4 text-gray-800">Editar Tipo de Producto</h2>
            <form asp-action="Editar" method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
                <input type="hidden" asp-for="IdTipoProducto" />

                <!-- Campo NombreTipo -->
                <div>
                    <label asp-for="NombreTipo" class="block text-sm font-medium text-gray-700">Nombre del Tipo de Producto</label>
                    <input asp-for="NombreTipo" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" required>
                    <span asp-validation-for="NombreTipo" class="text-xs text-red-500"></span>
                </div>

                <div class="flex justify-end space-x-2">
                    <!-- Botón Cancelar -->
                    <a asp-action="Lista" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition duration-300 ease-in-out">Cancelar</a>
                    <!-- Botón Guardar Cambios -->
                    <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-300 ease-in-out">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
