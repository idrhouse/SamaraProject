@model SamaraProject1.Models.TipoProducto

@{
    ViewData["Title"] = "Editar Tipo de Producto";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-6 sm:py-8 md:py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-sm sm:max-w-md md:max-w-lg lg:max-w-2xl xl:max-w-3xl mx-auto bg-white shadow-2xl rounded-3xl overflow-hidden">
        <div class="px-4 sm:px-6 md:px-8 py-4 sm:py-5 md:py-6 bg-gradient-to-r from-blue-500 to-indigo-600">
            <h2 class="text-xl sm:text-2xl md:text-3xl font-extrabold text-white text-center sm:text-left">Editar Tipo de Producto</h2>
        </div>

        <form asp-action="Editar" method="post" class="px-4 sm:px-6 md:px-8 py-4 sm:py-5 md:py-6 space-y-4 sm:space-y-5 md:space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4 mb-4"></div>
            <input type="hidden" asp-for="IdTipoProducto" />

            <div class="space-y-2">
                <label asp-for="NombreTipo" class="block text-sm font-medium text-gray-700">Nombre del Tipo de Producto</label>
                <input asp-for="NombreTipo" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm sm:text-base" placeholder="Ingrese el nombre del tipo de producto" required>
                <span asp-validation-for="NombreTipo" class="text-xs text-red-500"></span>
            </div>

            <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3 pt-4 sm:pt-5 md:pt-6">
                <button type="submit" class="w-full sm:w-auto px-6 py-2 bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold rounded-lg shadow-md hover:from-blue-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm sm:text-base">
                    Guardar Cambios
                </button>
                <a asp-action="Lista" class="w-full sm:w-auto px-4 py-2 bg-gray-200 text-gray-700 rounded-lg text-center hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm sm:text-base">
                    Cancelar
                </a>
               
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

