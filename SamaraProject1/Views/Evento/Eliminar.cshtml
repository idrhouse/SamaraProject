@model SamaraProject1.Models.Evento

@{
    ViewData["Title"] = "Eliminar Evento";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4">
            <h2 class="text-2xl font-bold mb-4 text-gray-800">¿Está seguro de que desea eliminar este evento?</h2>

            <div class="mb-6">
                <h3 class="text-xl font-semibold text-gray-700 mb-2">@Model.Nombre</h3>
                <p class="text-gray-600 mb-2">@Model.Descripcion</p>
                <p class="text-gray-600 mb-2">Fecha: @Model.Fecha.ToLocalTime().ToString("dd/MM/yyyy")</p>
                <p class="text-gray-600 mb-2">Hora: @Model.HoraInicio.ToString(@"hh\:mm") - @Model.HoraFin.ToString(@"hh\:mm")</p>
            </div>

            @if (Model.ImagenDatos != null)
            {
                <div class="mb-6">
                    <img src="@Url.Action("ObtenerImagen", "Evento", new { id = Model.IdEvento })" alt="@Model.Nombre" class="w-full h-48 object-cover rounded-lg">
                </div>
            }

            <form asp-action="Eliminar" method="post">
                <input type="hidden" asp-for="IdEvento" />
                <div class="flex justify-end space-x-4">
                    <a asp-action="Lista" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition duration-300 ease-in-out">
                        Cancelar
                    </a>
                    <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition duration-300 ease-in-out">
                        Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>