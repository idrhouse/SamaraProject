@model List<SamaraProject1.Models.Evento>

<div class="container">
    <h2>Lista de Eventos</h2>

    <p>
        <a asp-action="Nuevo" class="btn btn-primary">Crear Nuevo Evento</a>
    </p>

    <div class="row">
        @foreach (var evento in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="position-relative" style="height: 200px;">
                        @if (!string.IsNullOrEmpty(evento.ImagenUrl))
                        {
                            <img src="@evento.ImagenUrl" class="card-img-top h-100 w-100" alt="Imagen de @evento.Nombre" style="object-fit: cover;">
                        }
                        else
                        {
                            <div class="h-100 w-100 bg-secondary d-flex align-items-center justify-content-center text-white">
                                Sin imagen
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@evento.Nombre</h5>
                        <p class="card-text">@evento.Descripcion</p>
                        <p class="card-text"><small class="text-muted">Fecha: @evento.Fecha.ToString("dd/MM/yyyy HH:mm")</small></p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="btn-group w-100">
                            <a asp-action="Editar" asp-route-id="@evento.IdEvento" class="btn btn-primary">Editar</a>
                            <a asp-action="Eliminar" asp-route-id="@evento.IdEvento" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>