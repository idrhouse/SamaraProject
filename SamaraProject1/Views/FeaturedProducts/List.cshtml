@model List<SamaraProject1.Models.FeaturedProduct>

@{
    ViewData["Title"] = "Productos Destacados";
}

<div class="max-w-4xl mx-auto py-10 mt-8 bg-white shadow-lg rounded-lg">
    <h1 class="text-3xl font-extrabold text-center mb-8 text-gray-800">Productos Destacados</h1>

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
            <span class="block sm:inline">@TempData["Error"]</span>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
            <span class="block sm:inline">@TempData["Success"]</span>
        </div>
    }

    <div class="mb-6 text-right">
        <a href="/FeaturedProducts/Add"
           class="bg-blue-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
            + Agregar Producto
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full border border-gray-200 rounded-lg overflow-hidden shadow-sm">
            <thead class="bg-gray-100">
                <tr>
                    <th class="border-b border-gray-300 px-4 py-2 text-left text-gray-700 font-semibold">ID</th>
                    <th class="border-b border-gray-300 px-4 py-2 text-left text-gray-700 font-semibold">Nombre</th>
                    <th class="border-b border-gray-300 px-4 py-2 text-left text-gray-700 font-semibold">Imagen</th>
                    <th class="border-b border-gray-300 px-4 py-2 text-left text-gray-700 font-semibold">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var product in Model ?? new List<SamaraProject1.Models.FeaturedProduct>())
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 text-gray-800">@product.Id</td>
                        <td class="px-4 py-3 text-gray-800">@product.Name</td>
                        <td class="px-4 py-3">
                            <img src="@product.ImageUrl" alt="@product.Name" class="h-16 w-auto rounded-md shadow-md">
                        </td>
                        <td class="px-4 py-3">
                            <a href="/FeaturedProducts/Edit/@product.Id"
                               class="text-blue-600 hover:text-blue-800 font-medium mr-4">
                                Editar
                            </a>
                            <form method="post" action="/FeaturedProducts/Delete/@product.Id" class="inline">
                                <button type="submit"
                                        class="text-red-600 hover:text-red-800 font-medium">
                                    Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
