@{
    ViewData["Title"] = "Agregar Producto Destacado";
}

<div class="max-w-2xl mx-auto py-10 mt-8 bg-white shadow-lg rounded-lg">
    <h1 class="text-3xl font-extrabold text-center mb-8 text-gray-800">Agregar Producto Destacado</h1>

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
            <span class="block sm:inline">@TempData["Error"]</span>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
            <span class="block sm:inline">@TempData["Success"]</span>
        </div>
    }

    <div class="mb-6 text-right">
        <a href="/FeaturedProducts/List"
           class="text-blue-600 hover:underline hover:text-blue-800 text-sm font-medium">
            &larr; Regresar
        </a>
    </div>

    <form method="post" enctype="multipart/form-data" action="/FeaturedProducts/Add" class="space-y-6">
        <!-- Campo: Nombre del Producto -->
        <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Nombre del Producto</label>
            <input type="text" id="name" name="name" required
                   class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
        </div>

        <!-- Campo: Imagen -->
        <div>
            <label for="image" class="block text-sm font-medium text-gray-700">Imagen</label>
            <input type="file" id="image" name="image" required accept="image/*"
                   class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
            <p class="mt-2 text-sm text-gray-500">Selecciona una imagen para el producto.</p>
        </div>

        <!-- Botón de Enviar -->
        <div>
            <a href="List.html">
                <button type="submit"
                        class="w-full bg-blue-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                    Subir Producto
                </button>
            </a>
        </div>
    </form>
</div>
