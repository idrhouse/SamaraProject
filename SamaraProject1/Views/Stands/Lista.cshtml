@model List<SamaraProject1.Models.Stands>

<div class="container">
    <h2>Lista de Stands</h2>

    <p>
        <a asp-action="Nuevo" class="btn btn-primary">Crear Nuevo Stand</a>
    </p>

    <div class="row">
        @foreach (var stand in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="position-relative" style="height: 200px;">
                        @if (!string.IsNullOrEmpty(stand.ImagenUrl))
                        {
                            <img src="@stand.ImagenUrl" class="card-img-top h-100 w-100" alt="Imagen del Stand @stand.Numero_Stand" style="object-fit: cover;">
                        }
                        else
                        {
                            <div class="h-100 w-100 bg-secondary d-flex align-items-center justify-content-center text-white">
                                Sin imagen
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Stand #@stand.Numero_Stand</h5>
                        <p class="card-text">@stand.Descripcion_Stand</p>
                        <p class="card-text"><small class="text-muted">Emprendedor: @stand.Emprendedor?.NombreEmprendedor</small></p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="btn-group w-100">
                            <a asp-action="Editar" asp-route-id="@stand.IdStand" class="btn btn-primary">Editar</a>
                            <a asp-action="Eliminar" asp-route-id="@stand.IdStand" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>