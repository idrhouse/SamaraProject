@model SamaraProject1.Models.Stands

@{
    ViewData["Title"] = "Eliminar Stand";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-6">
            <h1 class="text-3xl font-bold text-gray-800 mb-4">Eliminar Stand</h1>
            <h3 class="text-xl font-semibold text-red-600 mb-4">¿Está seguro que desea eliminar este stand?</h3>

            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Número de Stand</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Numero_Stand</dd>
                </div>

                <div class="sm:col-span-2">
                    <dt class="text-sm font-medium text-gray-500">Descripción del Stand</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Descripcion_Stand</dd>
                </div>

                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Emprendedor</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Emprendedor?.NombreEmprendedor</dd>
                </div>
            </dl>

            <form asp-action="Eliminar" method="post" class="mt-6">
                <input type="hidden" asp-for="IdStand" />
                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Confirmar Eliminación</button>
                    <a asp-action="Lista" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>