@model SamaraProject1.Models.Stands

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar Stand</h2>
        <form asp-controller="Stands" asp-action="Editar" method="post" enctype="multipart/form-data">
            <input asp-for="IdStand" type="hidden" />
            <input asp-for="ImagenUrl" type="hidden" />
            <div class="mb-3">
                <label asp-for="Numero_Stand" class="form-label">Número de Stand</label>
                <input class="form-control" asp-for="Numero_Stand" type="text" />
                <span asp-validation-for="Numero_Stand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion_Stand" class="form-label">Descripción</label>
                <input class="form-control" asp-for="Descripcion_Stand" type="text" />
                <span asp-validation-for="Descripcion_Stand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IdEmprendedor" class="form-label">Emprendedor</label>
                <select class="form-select" asp-for="IdEmprendedor" asp-items="@(new SelectList(ViewBag.Emprendedores, "IdEmprendedor", "NombreEmprendedor", Model.IdEmprendedor))"></select>
                <span asp-validation-for="IdEmprendedor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Imagen Actual</label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                    {
                        <img src="@Model.ImagenUrl" alt="Imagen actual" class="img-thumbnail mb-2" style="max-width: 200px;" />
                    }
                    else
                    {
                        <p>No hay imagen actualmente</p>
                    }
                </div>
                <input type="file" name="imagen" class="form-control" accept="image/*" />
                <small class="text-muted">Deja este campo vacío si no deseas cambiar la imagen</small>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Stands" asp-action="Lista" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}