@model SamaraProject1.Models.Stands

@{
    ViewData["Title"] = "Editar Stand";
}

<div class="min-h-screen bg-gradient-to-br from-orange-50 to-orange-100 py-8 sm:py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md sm:max-w-lg md:max-w-2xl lg:max-w-3xl mx-auto bg-white shadow-2xl rounded-3xl overflow-hidden">
        <div class="px-4 sm:px-6 md:px-8 py-4 sm:py-6 bg-gradient-to-r from-orange-400 to-orange-600">
            <h2 class="text-2xl sm:text-3xl font-extrabold text-white text-center sm:text-left">Editar Stand</h2>
        </div>

        <form asp-action="Editar" enctype="multipart/form-data" class="px-4 sm:px-6 md:px-8 py-6 space-y-4 sm:space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4 mb-4"></div>
            <input type="hidden" asp-for="IdStand" />

            <div class="space-y-2">
                <label asp-for="Numero_Stand" class="block text-sm font-medium text-gray-700">Número de Stand</label>
                <input asp-for="Numero_Stand" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-orange-400 focus:border-orange-400 text-sm" placeholder="Ingrese el número del stand" required>
                <span asp-validation-for="Numero_Stand" class="text-xs text-red-500"></span>
            </div>

            <div class="space-y-2">
                <label asp-for="Descripcion_Stand" class="block text-sm font-medium text-gray-700">Descripción del Stand</label>
                <textarea asp-for="Descripcion_Stand" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-orange-400 focus:border-orange-400 text-sm" placeholder="Describa brevemente el stand" required></textarea>
                <span asp-validation-for="Descripcion_Stand" class="text-xs text-red-500"></span>
            </div>

            <div class="space-y-2">
                <label asp-for="IdEmprendedor" class="block text-sm font-medium text-gray-700">Emprendedor</label>
                <select asp-for="IdEmprendedor" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-orange-400 focus:border-orange-400 text-sm" asp-items="@(new SelectList(ViewBag.Emprendedores, "IdEmprendedor", "NombreEmprendedor"))">
                    <option value="">-- Seleccione un Emprendedor --</option>
                </select>
                <span asp-validation-for="IdEmprendedor" class="text-xs text-red-500"></span>
            </div>

            <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3 pt-6">
                <button type="submit" class="w-full sm:w-auto px-6 py-2 bg-gradient-to-r from-orange-400 to-orange-600 text-white font-semibold rounded-lg shadow-md hover:from-orange-500 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm">
                    Guardar Cambios
                </button>
                <a asp-action="Lista" class="w-full sm:w-auto px-4 py-2 bg-gray-200 text-gray-700 rounded-lg text-center hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm">
                    Cancelar
                </a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}