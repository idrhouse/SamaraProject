@model SamaraProject1.Models.Stands

@{
    ViewData["Title"] = "Crear Nuevo Stand";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Crear Nuevo Stand</h1>

        <form asp-action="Crear" enctype="multipart/form-data" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="Numero_Stand" class="block text-gray-700 text-sm font-bold mb-2">Número de Stand</label>
                <input asp-for="Numero_Stand" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Numero_Stand" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Descripcion_Stand" class="block text-gray-700 text-sm font-bold mb-2">Descripción del Stand</label>
                <textarea asp-for="Descripcion_Stand" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" rows="3"></textarea>
                <span asp-validation-for="Descripcion_Stand" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="IdEmprendedor" class="block text-gray-700 text-sm font-bold mb-2">Emprendedor</label>
                <select asp-for="IdEmprendedor" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-items="ViewBag.Emprendedores">
                    <option value="">-- Seleccione un Emprendedor --</option>
                </select>
                <span asp-validation-for="IdEmprendedor" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="flex items-center justify-between">
                <a asp-action="Lista" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                    Volver a la Lista
                </a>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Crear Stand
                </button>
                
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}