@model IEnumerable<SamaraProject1.Models.Stands>

@{
    ViewData["Title"] = "Stands - Feria Sámara Market";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 sm:py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <div class="mb-6 sm:mb-8 flex justify-start">
            <a href="javascript:history.back()" class="inline-flex items-center px-3 sm:px-4 py-2 border border-blue-500 text-blue-500 bg-transparent rounded-md font-medium text-sm transition-all duration-300 ease-in-out hover:bg-blue-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg class="mr-2 -ml-1 h-4 w-4 sm:h-5 sm:w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                <span class="hidden sm:inline">Volver</span>
            </a>
        </div>

        <div class="text-center mb-8 sm:mb-12">
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-900">
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-indigo-600">
                    Nuestros Stands
                </span>
            </h2>
            <p class="mt-3 sm:mt-4 max-w-2xl mx-auto text-lg sm:text-xl text-gray-600">
                Explora los stands de nuestros emprendedores locales
            </p>
        </div>

        <div class="mb-8 sm:mb-12 rounded-2xl overflow-hidden shadow-xl">
            <img src="/imagenes/mapa.jpeg" alt="Mapa de stands" class="w-full h-48 sm:h-64 md:h-80 lg:h-96 object-cover" />
        </div>

        <div class="grid gap-6 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3">
            @foreach (var item in Model)
            {
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden transition duration-300 ease-in-out transform hover:scale-105 hover:shadow-2xl">
                    <div class="p-4 sm:p-6 space-y-3 sm:space-y-4">
                        <h3 class="text-xl sm:text-2xl font-bold text-gray-900">
                            Stand #@item.Numero_Stand
                        </h3>
                        <p class="text-sm sm:text-base text-gray-600">@item.Descripcion_Stand</p>
                        @if (item.Emprendedor != null)
                        {
                            <div class="pt-3 sm:pt-4 border-t border-gray-200">
                                <p class="text-xs sm:text-sm font-semibold text-gray-500 uppercase tracking-wider">Emprendedor</p>
                                <p class="mt-1 text-base sm:text-lg font-medium text-indigo-600">@item.Emprendedor.NombreNegocio</p>
                                <p class="mt-1 text-sm sm:text-base text-gray-600">@item.Emprendedor.NombreEmprendedor @item.Emprendedor.Apellidos</p>
                            </div>
                        }
                        else
                        {
                            <div class="pt-3 sm:pt-4 border-t border-gray-200">
                                <p class="text-xs sm:text-sm font-semibold text-gray-500 uppercase tracking-wider">Estado</p>
                                <p class="mt-1 text-base sm:text-lg font-medium text-green-600">Disponible</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

