@model SamaraProject1.Models.Emprendedor

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo Emprendedor</h2>
        <form asp-controller="Emprendedor" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label asp-for="NombreEmprendedor" class="form-label">Nombre Emprendedor</label>
                <input asp-for="NombreEmprendedor" class="form-control" type="text" required />
                <span asp-validation-for="NombreEmprendedor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Apellidos" class="form-label">Apellidos</label>
                <input asp-for="Apellidos" class="form-control" type="text" required />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NombreNegocio" class="form-label">Nombre del Negocio</label>
                <input asp-for="NombreNegocio" class="form-control" type="text" required />
                <span asp-validation-for="NombreNegocio" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DescripcionNegocio" class="form-label">Descripción del Negocio</label>
                <textarea asp-for="DescripcionNegocio" class="form-control" rows="3"></textarea>
                <span asp-validation-for="DescripcionNegocio" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Telefono" class="form-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control" type="tel" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Correo" class="form-label">Correo</label>
                <input asp-for="Correo" class="form-control" type="email" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IdAdministrador" class="form-label">Administrador</label>
                <select asp-for="IdAdministrador" class="form-select" asp-items="@(new SelectList(ViewBag.Administradores, "IdAdministrador", "NombreAdministrador"))" required>
                    <option value="">-- Seleccione un Administrador --</option>
                </select>
                <span asp-validation-for="IdAdministrador" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Crear Emprendedor</button>
                <a asp-controller="Emprendedor" asp-action="Lista" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}