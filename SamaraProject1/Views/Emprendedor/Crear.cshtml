@model SamaraProject1.Models.Emprendedor

@{
    ViewData["Title"] = "Crear Emprendedor";
}

<div class="min-h-screen bg-gradient-to-br from-blue-100 to-white py-6 sm:py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md sm:max-w-lg md:max-w-2xl lg:max-w-3xl mx-auto bg-white shadow-2xl rounded-3xl overflow-hidden">
        <div class="px-4 sm:px-6 md:px-8 py-4 sm:py-6 bg-gradient-to-r from-blue-500 to-indigo-600">
            <h2 class="text-2xl sm:text-3xl font-extrabold text-white text-center">Crear Nuevo Emprendedor</h2>
        </div>

        <form asp-action="Crear" method="post" enctype="multipart/form-data" class="px-4 sm:px-6 md:px-8 py-6 space-y-4 sm:space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4 mb-4"></div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                <div class="space-y-2">
                    <label asp-for="NombreEmprendedor" class="block text-sm font-medium text-gray-700">Nombre</label>
                    <input asp-for="NombreEmprendedor" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="Ingrese el nombre" />
                    <span asp-validation-for="NombreEmprendedor" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Apellidos" class="block text-sm font-medium text-gray-700">Apellidos</label>
                    <input asp-for="Apellidos" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="Ingrese los apellidos" />
                    <span asp-validation-for="Apellidos" class="text-xs text-red-500"></span>
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="NombreNegocio" class="block text-sm font-medium text-gray-700">Nombre del Negocio</label>
                <input asp-for="NombreNegocio" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="Ingrese el nombre del negocio" />
                <span asp-validation-for="NombreNegocio" class="text-xs text-red-500"></span>
            </div>

            <div class="space-y-2">
                <label asp-for="DescripcionNegocio" class="block text-sm font-medium text-gray-700">Descripción del Negocio</label>
                <textarea asp-for="DescripcionNegocio" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="Describa brevemente su negocio"></textarea>
                <span asp-validation-for="DescripcionNegocio" class="text-xs text-red-500"></span>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                <div class="space-y-2">
                    <label asp-for="Telefono" class="block text-sm font-medium text-gray-700">Teléfono</label>
                    <input asp-for="Telefono" type="tel" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="Ej: +1234567890" />
                    <span asp-validation-for="Telefono" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Correo" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
                    <input asp-for="Correo" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="ejemplo@correo.com" />
                    <span asp-validation-for="Correo" class="text-xs text-red-500"></span>
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="IdCategoria" class="block text-sm font-medium text-gray-700">Categoría</label>
                <select asp-for="IdCategoria" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" asp-items="ViewBag.Categorias">
                    <option value="">Seleccione una categoría</option>
                </select>
                <span asp-validation-for="IdCategoria" class="text-xs text-red-500"></span>
            </div>

            <div class="space-y-2">
                <label for="imagen" class="block text-sm font-medium text-gray-700">Imagen del Emprendedor</label>
                <div class="mt-1 flex justify-center px-4 sm:px-6 pt-4 sm:pt-5 pb-4 sm:pb-6 border-2 border-gray-300 border-dashed rounded-md">
                    <div class="space-y-1 text-center">
                        <svg class="mx-auto h-10 sm:h-12 w-10 sm:w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <div class="flex text-sm text-gray-600">
                            <label for="imagen" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                                <span>Subir una imagen</span>
                                <input id="imagen" name="imagen" type="file" accept="image/*" class="sr-only">
                            </label>
                            <p class="pl-1">o arrastrar y soltar</p>
                        </div>
                        <p class="text-xs text-gray-500">PNG, JPG, GIF hasta 10MB</p>
                    </div>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3 pt-6">
                <a asp-action="Lista" class="w-full sm:w-auto px-4 py-2 bg-gray-200 text-gray-700 rounded-lg text-center hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm">
                    Volver a la Lista
                </a>
                <button type="submit" class="w-full sm:w-auto px-6 py-2 bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold rounded-lg shadow-md hover:from-blue-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-300 ease-in-out text-sm">
                    Crear Emprendedor
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

