@model IEnumerable<SamaraProject1.Models.Emprendedor>

@{
    ViewData["Title"] = "Lista de Emprendedores";

}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Emprendedores</h1>
        <a href="@Url.Action("Crear", "Emprendedor")" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300 ease-in-out flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Nuevo Emprendedor
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden transition duration-300 ease-in-out transform hover:scale-105">
                <img src="@(string.IsNullOrEmpty(item.ImagenUrl) ? "/imagenes/emprendedores/default-emprendedor.jpg" : item.ImagenUrl)" alt="@item.NombreEmprendedor" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h1 class="text-xl font-semibold text-gray-800 mb-2">@item.NombreEmprendedor @item.Apellidos</h1>
                    <p class="text-x font-semibold text-gray-800 mb-2">Nombre del Negocio:</p>
                    <p class="text-gray-600 mb-2">@item.NombreNegocio</p>
                    <p class="text-x font-semibold text-gray-800 mb-2">Stand(s) asignado:</p>
                    <p class="text-gray-600 mb-2">
                        @if (item.Stands == null || !item.Stands.Any())
                        {
                            @:Sin asignar
                        }
                        else
                        {
                            @: @string.Join(", ", item.Stands.Select(s => s.Numero_Stand))
                        }
                    </p>
                    <p class="text-x font-semibold text-gray-800 mb-2">Teléfono:</p>
                    <p class="text-gray-600 mb-2">@item.Telefono</p>
                    <div class="flex justify-end space-x-2">
                        <a href="@Url.Action("Editar", "Emprendedor", new { id = item.IdEmprendedor })" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300 ease-in-out inline-flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                            </svg>
                            Editar
                        </a>
                        <a href="@Url.Action("Eliminar", "Emprendedor", new { id = item.IdEmprendedor })" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300 ease-in-out inline-flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            Eliminar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>