@model IEnumerable<SamaraProject1.Models.Emprendedor>

@{
    ViewData["Title"] = "Emprendedores - Feria Sámara Market";
}

<div class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Nuestros Emprendedores
            </h2>
            <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
                Conoce a los talentosos emprendedores detrás de nuestros productos
            </p>
        </div>

        <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            @foreach (var item in Model)
            {
                <div class="group relative bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                    {
                        <div class="w-full aspect-w-4 aspect-h-3">
                            <img src="@item.ImagenUrl" alt="@item.NombreEmprendedor" class="w-full h-full object-cover">
                        </div>
                    }
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-gray-900">
                            @item.NombreEmprendedor @item.Apellidos
                        </h3>
                        <p class="mt-2 text-sm font-medium text-blue-600">
                            @item.NombreNegocio
                        </p>
                        <p class="mt-2 text-sm text-gray-500">
                            @item.DescripcionNegocio
                        </p>
                        <div class="mt-4 flex items-center text-sm text-gray-500">
                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                            </svg>
                            @item.Telefono
                        </div>
                        <div class="mt-2 flex items-center text-sm text-gray-500">
                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                            </svg>
                            @item.Correo
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>