@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - Feria Sámara Market</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .bg-pattern {
            background-color: #fff8f0;
            background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ff8c42' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
        }

        .login-btn {
            background: linear-gradient(135deg, #ff8c42 0%, #ffb347 100%);
            transition: all 0.3s ease;
        }

            .login-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(255, 140, 66, 0.3);
            }

        .input-focus {
            transition: all 0.3s ease;
        }

            .input-focus:focus {
                border-color: #ff8c42;
                box-shadow: 0 0 0 3px rgba(255, 140, 66, 0.2);
            }

        .card-shadow {
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
    </style>
</head>
<body class="min-h-screen bg-pattern flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full animate__animated animate__fadeIn">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-extrabold text-orange-600">Sámara Market</h1>
            <p class="mt-2 text-gray-600">Bienvenido de nuevo a nuestra comunidad</p>
        </div>

        <div class="bg-white rounded-2xl overflow-hidden card-shadow">
            <div class="px-6 py-8 sm:px-8 sm:py-10 bg-gradient-to-r from-orange-400 to-orange-500">
                <h2 class="text-2xl sm:text-3xl font-bold text-white text-center">Iniciar Sesión</h2>
            </div>

            <div class="px-6 py-8 sm:px-8 sm:py-10 space-y-6">
                <form asp-controller="Inicio" asp-action="IniciarSesion" method="post" class="space-y-6">
                    <div>
                        <label for="correo" class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                </svg>
                            </div>
                            <input id="correo" name="correo" type="email" autocomplete="email" required class="input-focus appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none sm:text-sm" placeholder="tu@email.com" oninput="this.value = this.value.toLowerCase()">
                        </div>
                    </div>

                    <div>
                        <label for="clave" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <input id="clave" name="clave" type="password" autocomplete="current-password" required class="input-focus appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none sm:text-sm" placeholder="••••••••">
                        </div>
                    </div>

                    @if (ViewData["MENSAJE"] != null)
                    {
                        <div class="rounded-md bg-red-50 p-4 animate__animated animate__headShake">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-red-800">@ViewData["MENSAJE"]</h3>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 text-orange-500 focus:ring-orange-400 border-gray-300 rounded">
                            <label for="remember_me" class="ml-2 block text-sm text-gray-700">
                                Recordarme
                            </label>
                        </div>

                        <div class="text-sm">
                            <a asp-controller="RecuperarClave" asp-action="RecuperarClave" class="font-medium text-orange-500 hover:text-orange-600">
                                ¿Olvidaste tu contraseña?
                            </a>
                        </div>
                    </div>

                    <div>
                        <button type="submit" class="login-btn w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-md text-white font-medium text-base focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-400">
                            Iniciar Sesión
                        </button>
                    </div>
                </form>

               
            </div>
        </div>

        <div class="mt-8 text-center text-sm text-gray-500">
            <p>© 2023 Feria Sámara Market. Todos los derechos reservados.</p>
        </div>
    </div>
</body>
</html>