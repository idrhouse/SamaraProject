@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">

    <div class="min-h-screen flex items-center justify-center">
        <div class="w-full max-w-md px-6 py-8 bg-white shadow-md rounded-lg">

            <div class="text-center mb-6">
                <h3 class="text-2xl font-semibold text-blue-600">Iniciar Sesión</h3>
                <p class="text-gray-500">Accede a tu cuenta</p>
            </div>

            <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">

                <!-- Campo Correo -->
                <div class="mb-4">
                    <input type="text" name="correo" placeholder="Correo electrónico" required class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>

                <!-- Campo Contraseña -->
                <div class="mb-4">
                    <input type="password" name="clave" placeholder="Contraseña" required class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>

                <!-- Mensaje de error -->
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="mb-4">
                        <div class="bg-red-100 text-red-600 p-3 rounded-md">
                            @ViewData["Mensaje"]
                        </div>
                    </div>
                }

                <!-- Botón de submit -->
                <div class="mb-6">
                    <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-3 rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        Iniciar Sesión
                    </button>
                </div>

                <!-- Enlace a registro -->
                <div class="text-center">
                    <p class="text-sm text-gray-500">¿No tienes una cuenta? <a href="@Url.Action("Registrarse","Inicio")" class="text-blue-600 hover:text-blue-700 font-semibold">Regístrate</a></p>
                </div>

            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
